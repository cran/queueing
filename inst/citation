citHeader("To cite package 'queueing' in publications use:")
     
desc <- packageDescription("queueing")
year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", desc$Date)
vers <- paste("R package version", desc$Version)
     
citEntry(entry="Manual",
  title = "queueing: Basic Markovian queueing systems.",
  author = personList(as.person("Pedro Canadilla")),
  year = year,
  note = vers,
     
  textVersion =
  paste("Pedro Canadilla (",
    year,
    "). queueing: Basic Markovian queueing systems. ",
    vers, ".", sep=""))

